<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.myapplication.NavigationLauncherActivity"

        android:launchMode="singleInstance" >

            <intent-filter android:label="@string/open_gh_maps">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://graphhopper.com/maps/” -->
                <data
                    android:host="graphhopper.com"
                    android:pathPrefix="/maps"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter android:label="@string/open_vrp_solution">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://graphhopper.com/api/1/vrp/solution/” -->
                <data
                    android:host="graphhopper.com"
                    android:pathPrefix="/api/1/vrp/solution"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.myapplication.NavigationViewSettingsActivity"
            android:label="@string/settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.NavigationLauncherActivity" />
        </activity>

    <activity android:name=".CreatePasswordActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

    </activity>

    <activity android:name=".Welcome">
    </activity>

    <activity android:name=".EnterPasswordActivity">
    </activity>

    <activity android:name=".InputContactActivity">
    </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


</manifest>